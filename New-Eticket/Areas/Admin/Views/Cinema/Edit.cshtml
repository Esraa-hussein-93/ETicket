<div class="container my-3">
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1>Edit Cinema</h1>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <form action="/Admin/Cinema/Edit" method="post">
                <input type="hidden" class="form-control" name="Id" value="@Model.Id">

                <div class="mb-3">
                    <label for="Name" class="form-label">Cinema Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
                </div>

                <div class="mb-3">
                    <label for="Name" class="form-label">Cinema Description</label>
                    <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description">
                </div>

                <div class="mb-3">
                    <label for="Img" class="form-label">Cinema Logo</label>
                    <input type="file" class="form-control" id="Img" name="file" value="@Model.CinemaLogo" accept="image/*" onchange="previewImage(event)">
                    <div class="mt-3 position-relative" style="max-width: 20%;">
                        <img id="imgPreview" src="~/images/@Model.CinemaLogo" alt="Image Preview" style="width: 100%; height: auto; display: block;" />
                        <a href="/Admin/Cinema/DeleteImg?Id=@Model.Id" class="btn btn-danger btn-sm position-absolute top-0 end-0" style="transform: translate(50%, -50%);" onclick="deleteImage()">X</a>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="Name" class="form-label">Cinemas Address</label>
                    <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address">
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
