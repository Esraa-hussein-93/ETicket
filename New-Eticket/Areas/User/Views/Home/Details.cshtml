<!-- Additional Styles -->
<style>
    /* Section Padding */
    .py-5 {
        padding-top: 3rem !important;
        padding-bottom: 3rem !important;
    }

    /* Make sure images are responsive and have rounded corners */
    .card-img-top {
        width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 10px;
    }

    /* Category Style - Badge */
    .category .badge {
        font-size: 1rem;
        padding: 0.5rem 1rem;
        font-weight: 500;
        letter-spacing: 1px;
    }

    /* Style for Category */
    .category {
        margin-bottom: 1rem;
    }

    /* Text style for Category */
    .small {
        font-size: 0.875rem;
        color: #6c757d;
    }

    /* Style the movie name */
    h1.display-5 {
        font-size: 2.5rem;
        font-weight: 600;
        color: #333;
    }

    /* Movie description */
    .lead {
        font-size: 1.125rem;
        font-weight: 400;
        color: #495057;
    }

    /* Button styles */
    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1rem;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Add shadow effects */
    .shadow-lg {
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    }

    /* Optional: spacing between the video and buttons */
    .my-4 {
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
    }

    /* Custom video player style */
    video {
        width: 100%;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    /* Style for the 'Go Back' Button */
    .btn-lg {
        font-size: 1.25rem;
        padding: 0.75rem 2rem;
    }

    /* Related Movies Section Styles */
    .related-movie-card {
        border-radius: 10px;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

        .related-movie-card:hover {
            transform: scale(1.05);
        }

    /* Related movie cards */
    .card-title {
        font-size: 1.2rem;
        font-weight: 500;
    }

    /* Related movie 'View Details' button */
    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }
</style>
