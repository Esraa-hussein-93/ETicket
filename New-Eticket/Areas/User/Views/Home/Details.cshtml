<!-- Movie section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <!-- Movie Image -->
            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0 rounded shadow-lg" src="~/images/@Model.ImgUrl" alt="@Model.Name" />
            </div>

            <!-- Movie Details -->
            <div class="col-md-6">
                <!-- Category and Movie Name -->
                <div class="category mb-3">
                    <span class="badge rounded-pill bg-info text-white">@Model.Category.Name</span>
                </div>
                <h1 class="display-5 fw-bolder text-dark">@Model.Name</h1>

                <!-- Start Date, End Date, and Price -->
                <div class="fs-5 mb-5 text-muted">
                    <p><strong>Start Date:</strong> @Model.StartDate.ToString("MMMM dd, yyyy")</p>
                    <p><strong>End Date:</strong> @Model.EndDate.ToString("MMMM dd, yyyy")</p>
                    <p><strong>Price:</strong> @Model.Price.ToString("c")</p>
                </div>

                <!-- Movie Description -->
                <p><strong>Description:</strong></p>
                <p class="lead text-muted">@Model.Description</p>

                <!-- Movie Trailer (Optional, if there's a URL) -->
                @if (!string.IsNullOrEmpty(Model.TrailerUrl))
                {
                    <div class="my-4">
                        <video class="w-100 rounded shadow-lg" controls>
                            <source src="~/images/@Model.TrailerUrl" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                }

 

                <!-- Go Back Button -->
                <div class="d-flex justify-content-center align-items-center mt-4">
                    <a href="/User/Home/index" class="btn btn-primary btn-lg shadow-sm">Go Back to HomePage</a>
                </div>
            </div>
        </div>





















       


                
